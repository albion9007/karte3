<div class="word-header">
  <div class="left-header">
    <div class="header-title">
        <%= link_to current_user.name , edit_user_path(current_user), class:"btn btn-malformation btn-malformation--pastel" %>
    </div>
  </div>
  <div class="center-header">
    <div class="header-button">
      <a href="#", class="btn btn-malformation btn-malformation--pastel">help</a>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <% if user_signed_in? %>
        <%= link_to "新規入院", new_patient_path, class:"btn btn-malformation btn-malformation--pastel" %>
      <% else %>
        <%= link_to "新規入院", new_session_path(resource_name), class:"btn btn-malformation btn-malformation--pastel" %>
      <% end %>
    </div>
  </div>
</div>

<%# <病室一覧> %>
<div class="word-patients">
  <div class="left-patients">
    <div class="room">
      <div class="more">
        <a>301</a>
        <%# <病室内患者様一覧> %>
        <ul class="more_list">
          <li>
          <% @patients.each do |patient| %>
          <%= link_to patient_path(patient.id) do %>
            <table class="patients-show-table">
              <tbody>
              <tr class="patients-show-tr">
                <th class="patients-show-th">Picture</th>
                <th class="patients-show-th">Name</th>
                <th class="patients-show-th">Main Disease</th>
                <th class="patients-show-th">Sub Disease</th>
                <th class="patients-show-th">Main Doctor</th>
              </tr>
              <tr class="patients-show-tr">
                <td class="patients-show-td"><%= image_tag patient.image, class:"patient-img"%></td>
                <td class="patients-show-td"><%= patient.name %></td>
                <td class="patients-show-td"><%= patient.main_disease %></td>
                <td class="patients-show-td"><%= patient.sub_disease %></td>
                <td class="patients-show-td"><%= patient.main_doctor %></td>
              </tr>
              </tbody>
            </table>
          <% end %>
          <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="right-patients">
    <div class="room">
      <div class="more">
        <b href="#">303</b>
        <ul class="more_list">
          <li>
            <%= link_to '山本花子 72歳 主：肺炎 既：リウマチ' %>
          </li>
          <li>
            <%= link_to '岡田順子 85歳 主：肺炎 既：心不全' %>
          </li>
          <li>
            <%= link_to '加藤優子 78歳 主：肺炎 既：右大腿骨骨折' %>
          </li>
        </ul>
      </div>
  </div>
</div>